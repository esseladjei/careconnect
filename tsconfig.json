{
  "compilerOptions": {
     "target": "ES2020",
     "module": "node16",
     "moduleResolution": "node16",
     "outDir": "./dist",
     "rootDir": "./src",
     "strict": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "skipLibCheck": true,
     "tsBuildInfoFile": ".tsbuildinfo",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
